from aiogram.types import ReplyKeyboardMarkup, KeyboardButton

def get_main_menu():
    markup = ReplyKeyboardMarkup(resize_keyboard=True, row_width=2)
    buttons = [
        KeyboardButton("ğŸ“½ Prezentatsiya"),
        KeyboardButton("ğŸ“‘ Mustaqil ish"),
        KeyboardButton("ğŸ“œ Referat"),
        KeyboardButton("ğŸ“ Esselar"),
        KeyboardButton("ğŸ”  Krossvord"),
        KeyboardButton("ğŸ“– Glossariy"),
        KeyboardButton("Boshqa xizmatlar")
    ]
    markup.add(*buttons)
    return markup

def get_back_menu():
    markup = ReplyKeyboardMarkup(resize_keyboard=True)
    markup.add(KeyboardButton("ğŸ  Asosiy menyuga qaytish"))
    return markup

def get_phone_menu():
